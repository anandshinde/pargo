{
	"extends": ["stylelint-config-airbnb"],
	"rules": {
		"indentation": "tab",
		"string-quotes": "single",
		"max-nesting-depth": 5,
		"selector-max-id": 1,
		"number-leading-zero": null,
		"at-rule-empty-line-before": [
			"always",
			{
				"ignore": ["after-comment", "inside-block", "blockless-after-same-name-blockless"]
			}
		]
	}
}
